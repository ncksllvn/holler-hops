extends layout

block content
  .page-header.light-green.lighten-4
    .container
      h3 Contact Us
  .container
    .row
      .col.m4.s12
        h4 Phone
        span (859) 918-6532
        
        .section
          h4 Address
          address Suite 1 <br/> 7500 Oakbrook Dr. <br/>Florence, KY 41042
        
        h4 Hours
        ul
          li Mon: 3p - 12a
          li Tues: 3p - 12a
          li Wed &hyphen; Sat: 12p -2a
          li Sun: 12p - 12a
          
      .col.m8.s12
        h4 Message Us
        .email-response
        form(name='contact', action='/contact', method='post')
          .input-field
            input.validate(type='text', name='name', required='')
            label(for='name') Name*
          .input-field
            input.validate(type='email', name='email', required='')
            label(for='email') Email*
          .input-field
            input.validate(type='text', name='phone', required='')
            label(for='phone') Phone Number*
          .input-field
            textarea.validate.materialize-textarea(name='message', required='')
            label(for='message') Message*
          button.light-green.darken-2.waves-effect.waves-light.btn(type='submit') Submit
        