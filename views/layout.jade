doctype html
html(lang='en').light-green.lighten-2
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0')
    title= title + ' | Holler Hops and Grill'
    link(type='text/plain', rel='author', href='/humans.txt')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Fjalla+One', rel='stylesheet', type='text/css')
    link(href='/components/Materialize/dist/css/materialize.min.css', type='text/css', rel='stylesheet', media='screen,projection')
    link(href='/stylesheets/style.css', type='text/css', rel='stylesheet', media='screen,projection')
  body.white
    .navbar-fixed
      nav.light-green.darken-2(role='navigation')
        .nav-wrapper.container
          a#logo-container.brand-logo.center(href='/') Holler
          ul.left.hide-on-med-and-down
            li: a(href='/menu') Food We Serve
            li: a(href='/tap') Beer We Pour
          ul.right.hide-on-med-and-down
            li: a(href='/story') Our Story
            li: a(href='/contact') Contact
            li.hours-dropdown-link
              a.dropdown-button(href='javascript:;', data-activates='hours-dropdown') We're 
                if isOpen
                  span.amber-text.lighten-3-text Open
                else 
                  span.pink-text.text-lighten-4 Closed
                i.material-icons.right arrow_drop_down
                
          ul#nav-mobile.side-nav.light-green.darken-3
            li: a(href='/').white-text Home
            li: a(href='/menu').white-text Food We Serve
            li: a(href='/tap').white-text Beer We Pour
            li: a(href='/story').white-text Our Story
            li: a(href='/contact').white-text Contact Us
            li.no-padding
              ul.collapsible.collapsible-accordion
                li
                  a.white-text.collapsible-header We're 
                    if isOpen
                      span.amber-text.lighten-3-text Open
                    else 
                      span.pink-text.text-lighten-4 Closed
                    i.mdi-navigation-arrow-drop-down.right
                  .collapsible-body
                    ul.light-green.darken-2
                      li: a.white-text Mon: 3p - 12a
                      li: a.white-text Tue: 3p - 12a
                      li: a.white-text Wed: 12p -2a
                      li: a.white-text Thu: 12p - 2a
                      li: a.white-text Fri: 12p - 2a
                      li: a.white-text Sat: 12p - 2a
                      li: a.white-text Sun: 12p - 12a
            li: a(href='https://www.facebook.com/HollerHopsandGrill').white-text Facebook
          a.button-collapse(href='#', data-activates='nav-mobile')
            i.material-icons menu
    
    ul#hours-dropdown.dropdown-content
      li: span.black-text Mon: 3p - 12a
      li: span.black-text Tue: 3p - 12a
      li: span.black-text Wed: 12p -2a
      li: span.black-text Thu: 12p - 2a
      li: span.black-text Fri: 12p - 2a
      li: span.black-text Sat: 12p - 2a
      li: span.black-text Sun: 12p - 12a
    
    .section.no-pad-top.white
      main
        block content
  footer
    .light-green.lighten-3
      .container
        .row
          .col.s12.center-align.grey-text.text-darken-2.quote
            span.flow-text &quot;The first draught serveth for health, the second for pleasure, the third for shame, and the fourth for madness.&quot;
    .light-green.lighten-2
      .container.footer-bottom
        .row
          .col.s12.center-align.black-text
            .facebook-info
              a(href='https://www.facebook.com/HollerHopsandGrill')
                img(src='/images/facebook.png', height=20 alt='Like us on Facebook')
            a.black-text(href='tel:8599186532') 859.918.6532
            address 7500 Oakbrook Dr, Florence, KY 41042
